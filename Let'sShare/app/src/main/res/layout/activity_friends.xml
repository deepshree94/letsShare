<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.acds.letsshare.CouponsActivityActivity"
    android:background="#ffff534d">

    <Button
        android:id="@+id/button1"
        android:layout_height="55dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:text="ADD FRIENDS"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="40dp"
        android:onClick="addFriends"
        />

    <Button
        android:id="@+id/button2"
        android:layout_height="55dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button1"
        android:text="VIEW FRIENDS"
        android:layout_marginBottom="40dp"
        android:onClick="viewFriends"
        />

    <Button
        android:id="@+id/button3"
        android:layout_height="55dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button2"
        android:text="VIEW FRIEND REQUESTS"
        android:layout_marginBottom="40dp"
        android:onClick="viewFriendRequests"
        />

</RelativeLayout>

